extends ../../layouts/default.pug
 
 block main
   h1(class="mb-4") Add new role
   form(action=`${prefixAdmin}/roles/create`, method="POST") 
     div(class="form-group")
       label(for="title") Tittle 
       input(
         type="text" 
         class="form-control" 
         id="title" 
         name="title" 
         required
       )
     div(class="form-group")
       label(for="desc") Desc
       input(
         type="text" 
         class="form-control" 
         id="desc" 
         name="description"
       )
     div(class="form-group")
       button(
         type="submit"
         class="btn btn-primary"
       ) Tạo mới