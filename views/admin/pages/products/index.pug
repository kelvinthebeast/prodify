  .card.mb-3 
  .card-header Filter and Find

  .card-body 
    .row.g-2
      // Các nút lọc
      .col-md-6
        .d-flex.flex-wrap.gap-2
          each item in filterStatus 
            button.btn.btn-sm.btn-outline-success.flex-fill(
              class=item.class,
              data-status=item.status,
              style="min-width: 100px;"
            ) #{item.name}

      // Ô tìm kiếm
      .col-md-6
        form#form-search
          .input-group
            input.form-control(
              type='text',
              placeholder="Enter keyword......",
              name="keyword",
              value=keyword
            )
            button.btn.btn-success(type="submit") Find
  .card.mb-3 
    .card-header List
    .card-body
      table.table.table-hover.table-sm
        thead
          tr
            th No.
            th Image
            th Product's Name
            th Price
            th Status
            th Action
        tbody
          each item, index in products
            tr
              td #{index + 1}
              td
                img(src=item.thumbnail || '/path/to/default-image.jpg', width="100px" height="auto" alt="Thumbnail")
              td #{item.title}
              td #{item.price}$
              td
                if (item.status === "active")
                  a(href="#" class="badge badge-success") Active
                else
                  a(href="#" class="badge badge-warning text-dark") Inactive
              td 
                button(class="btn btn-warning btn-sm text-dark") Edit
                button(class="btn btn-danger btn-sm ms-2") Delete
