extends ../../layouts/default.pug
//- include ../../mixins/alert.pug
//- include ../../mixins/select-tree.pug
block main

  .container.mt-4
    h2  Category Detail
    .card
      .card-body
        dl.row
          dt.col-sm-3 ID
          
          dd.col-sm-9 #{category.id}

          dt.col-sm-3 Title
          dd.col-sm-9 #{category.title}

          dt.col-sm-3 Thumbnail
          dd.col-sm-9
            if category.thumbnail
              img(src=category.thumbnail, alt=`Image of ${category.title}`, width="100", height="100")
            else
              span.text-muted No image available

          dt.col-sm-3 Position
          dd.col-sm-9 #{category.position}

          dt.col-sm-3 Status
          dd.col-sm-9
            if category.status === "active"
              span.badge.bg-success Active
            else
              span.badge.bg-danger Inactive

        .mt-4
          a.btn.btn-warning(href=`${prefixAdmin}/products-category/edit/${category.id}`) Edit
          a.btn.btn-secondary.ml-2(href=`${prefixAdmin}/products-category`) Back
