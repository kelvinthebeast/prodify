extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-2 
        .row 
            .col-12 
                +box-head("Danh sách sản phẩm") 

        .row
            each item in products
                .col-4.mb-3 
                    .product-item 
                        img(src=item.thumbnail, alt=item.title)
                        .inner-content 
                            h3.inner-content #{item.title}
                            .inner-price-new #{item.priceNew}$  <!-- Dynamic value for new price -->
                            .inner-price-old #{item.price}$ <!-- Original price -->
                            .inner-discount #{item.discountPercentage}% <!-- Discount percentage -->


        .row
            each item in products
                .col-4.mb-3 
                    .product-item 
                        img(
                            src=item.thumbnail,
                            alt=item.title)
                        .inner-content 
