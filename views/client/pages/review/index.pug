extends ../../layouts/default.pug

block main
  .container.mt-5

    // Thông tin sản phẩm
    .card.mb-4
      .row.g-0.align-items-center
        .col-md-4.d-flex.justify-content-center
          img.img-fluid.rounded-start(
            src=product.thumbnail,
            alt="Ảnh sản phẩm",
            style="max-width: 250px; height: auto;"
          )
        .col-md-8.ps-md-5.ps-4
          .card-body
            h3.card-title.mb-3 #{product.title}
            p.card-text.text-muted.mb-3(style="text-align:justify;") !{product.description}
            p.card-text.mb-0
              strong Giá: 
              span.text-danger.ms-2 #{product.price}$


    h2.mb-4.text-primary Đánh giá sản phẩm

    // Tổng số đánh giá và điểm trung bình (cứng)
    .mb-3
      strong Tổng số đánh giá: 4
      br
      strong Đánh giá trung bình:
      span.text-warning.ms-2
        i.bi.bi-star-fill
        i.bi.bi-star-fill
        i.bi.bi-star-fill
        i.bi.bi-star-half
        i.bi.bi-star
      span.ms-2 3.4 / 5

    // Nút tạo đánh giá mới
    .mb-4
      a.btn.btn-primary(
        href=`/reviews/${product.id}/create`
      ) 
        i.bi.bi-pencil-square.me-2
        | Viết đánh giá

    // Review 1
    .mb-4.p-3.border.rounded.bg-light.d-flex.gap-3.align-items-start
      img.rounded-circle(src="https://randomuser.me/api/portraits/men/32.jpg", alt="avatar", width="48", height="48")
      .flex-grow-1
        .fw-bold Nguyễn Văn A
        .small.text-muted 15/06/2025
        .d-flex.align-items-center.mt-1
          .text-warning
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star-fill
          span.ms-2.fw-semibold.text-dark 5/5
        p.mt-2 Sản phẩm rất tốt, giao hàng nhanh.

    // Review 2
    .mb-4.p-3.border.rounded.bg-light.d-flex.gap-3.align-items-start
      img.rounded-circle(src="https://randomuser.me/api/portraits/women/44.jpg", alt="avatar", width="48", height="48")
      .flex-grow-1
        .fw-bold Trần Thị B
        .small.text-muted 10/06/2025
        .d-flex.align-items-center.mt-1
          .text-warning
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star
          span.ms-2.fw-semibold.text-dark 4/5
        p.mt-2 Chất lượng ổn, sẽ mua lại.

    // Review 3
    .mb-4.p-3.border.rounded.bg-light.d-flex.gap-3.align-items-start
      img.rounded-circle(src="https://randomuser.me/api/portraits/men/60.jpg", alt="avatar", width="48", height="48")
      .flex-grow-1
        .fw-bold Lê Văn C
        .small.text-muted 05/06/2025
        .d-flex.align-items-center.mt-1
          .text-warning
            i.bi.bi-star-fill
            i.bi.bi-star-half
            i.bi.bi-star
            i.bi.bi-star
            i.bi.bi-star
          span.ms-2.fw-semibold.text-dark 1.5/5
        p.mt-2 Không như mong đợi, cần cải thiện.

    // Review 4
    .mb-4.p-3.border.rounded.bg-light.d-flex.gap-3.align-items-start
      img.rounded-circle(src="https://randomuser.me/api/portraits/women/12.jpg", alt="avatar", width="48", height="48")
      .flex-grow-1
        .fw-bold Hoàng Thuý
        .small.text-muted 02/06/2025
        .d-flex.align-items-center.mt-1
          .text-warning
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star-fill
            i.bi.bi-star
            i.bi.bi-star
          span.ms-2.fw-semibold.text-dark 3/5
        p.mt-2 Giao hàng nhanh, đóng gói đẹp, sẽ ủng hộ tiếp.

    .mt-4
      a.btn.btn-outline-secondary.btn-lg.px-4.back-link.text-dark(
        href="/products",
        style="font-weight: 600; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;"
      )
        i.bi.arrow-left-circle-fill.me-3(style="font-size: 1.5rem; color: #495057;")
        | Quay lại

  // Bootstrap Icons stylesheet
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")

  // Bootstrap JS và Popper (cần để modal hoạt động)
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
