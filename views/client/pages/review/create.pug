extends ../../layouts/default.pug

block main
  .container.mt-5
    h2.mb-4.text-primary Viết đánh giá sản phẩm mới

    form(action=`/reviews/${product._id}/create`, method="POST")
      .mb-3
        label.form-label(for="productId") Mã sản phẩm
        input#productId.form-control(type="text", name="productId", required, placeholder="Nhập mã sản phẩm cần đánh giá")
      .mb-3
        label.form-label(for="reviewerName") Họ và tên
        input#reviewerName.form-control(type="text", name="name", required, placeholder="Nhập họ và tên")
      .mb-3
        label.form-label(for="reviewDate") Ngày đánh giá
        input#reviewDate.form-control(type="date", name="date", required, value=new Date().toISOString().slice(0,10))
      .mb-3
        label.form-label Đánh giá sao
        select.form-select(name="rating", required)
          option(value="", disabled selected) Chọn số sao
          option(value="5") 5 sao
          option(value="4") 4 sao
          option(value="3") 3 sao
          option(value="2") 2 sao
          option(value="1") 1 sao
      .mb-3
        label.form-label(for="reviewContent") Nội dung đánh giá
        textarea#reviewContent.form-control(name="content", rows="5", required, placeholder="Viết đánh giá của bạn ở đây...")
      button.btn.btn-primary(type="submit") Gửi đánh giá
      a.btn.btn-secondary.ms-3(href=`/reviews/${product.id}`) Quay lại danh sách đánh giá

  // Bootstrap Icons stylesheet
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")

  // Bootstrap JS bundle
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
