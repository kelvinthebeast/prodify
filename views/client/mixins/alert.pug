mixin alert-success(time)
  - if (messages.success)
      .message.success
        div(
          class="alert alert-success"
          role="alert"
          data-time='5000'
          show-alert
        ) #{messages.success} 
mixin alert-error(time)
  - if (messages.error)
      .message.error
        div(
          class="alert alert-danger"
          role="alert"
          data-time='5000'
          show-alert
        ) #{messages.error} 